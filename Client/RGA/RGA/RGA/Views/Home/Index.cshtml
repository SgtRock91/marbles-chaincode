<!DOCTYPE html>
<html ng-app="rga">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>ChainBreakers</title>
    <link rel="stylesheet" href="/cordova/css/onsenui/1.3.13/onsenui.css" /> 
    <link rel="stylesheet" href="/cordova/css/onsenui/1.3.13/onsen-css-components.css" /> 
    <script src="http://cdn.rawgit.com/OnsenUI/OnsenUI/1.3.11/build/js/angular/angular.min.js"></script>
    <script src="https://cdn.rawgit.com/OnsenUI/OnsenUI/1.3.11/build/js/onsenui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js"></script>
    <script src="/cordova/js/angular-chart/angular-chart.min.js"></script>
    <script src="/cordova/app/app.js"></script>
</head>
<body ng-controller="MainController as main">
    <ons-sliding-menu main-page="main.html" menu-page="menu.html" side="left" max-slide-distance="250px" var="menu" swipeable>
    </ons-sliding-menu>

    <ons-template id="main.html">
        <ons-navigator animation="slide" var="rgaNav">
            <ons-page>
                <ons-toolbar>
                    <div class="center">The Chain Gang</div>
                </ons-toolbar>
                <br />
                <canvas id="line" class="chart chart-line" chart-data="data" chart-labels="labels" chart-series="series" chart-options="options" chart-dataset-override="datasetOverride" chart-click="onClick"></canvas> 
            </ons-page>
        </ons-navigator>

        <ons-template id="landing.html">
            <ons-page>
                <ons-toolbar>
                    <div class="center">Title</div>
                </ons-toolbar>

                <p style="text-align: center">
                    <ons-button modifier="light" ng-click="rgaNav.popPage();">Pop</ons-button>
                </p>
            </ons-page>
        </ons-template>
    </ons-template>

    <ons-template id="doctor.html">
        <ons-page>
            <ons-toolbar>
                <div class="left">
                    <ons-toolbar-button onclick="menu.toggleMenu()">
                        <ons-icon icon="ion-navicon" style="font-size: 32px; width: 1em;"></ons-icon>
                    </ons-toolbar-button>
                </div>
                <div class="center">Doctor Portal</div>
            </ons-toolbar>
            
            <p style="text-align: center; color: #999; padding-top: 100px;">Doctor Portal</p>
        </ons-page>
    </ons-template>

    <ons-template id="patient.html">
        <ons-page>
            <ons-toolbar>
                <div class="left">
                    <ons-toolbar-button onclick="menu.toggleMenu()">
                        <ons-icon icon="ion-navicon" style="font-size: 32px; width: 1em;"></ons-icon>
                    </ons-toolbar-button>
                </div>
                <div class="center">Patient Portal</div>
            </ons-toolbar>
            <br />
            <ons-row style="text-align:center">
                <ons-col style="text-align:center">
                    <h5>Customer Information</h5>
                </ons-col>
            </ons-row>
            <ons-row>
                <ons-col>
                    First Name:
                </ons-col>
                <ons-col>
                    <input type="text" name="patientFirstName" ng-model="main.datasvc.CurrentCustomerFirstName">
                </ons-col>
            </ons-row>
            <ons-row>
                <ons-col>
                    Second Name:
                </ons-col>
                <ons-col>
                    <input type="text" name="patientLastName" ng-model="main.datasvc.CurrentCustomerLastName">
                </ons-col>
            </ons-row>
            
        </ons-page>
    </ons-template>

    <ons-template id="menu.html">
        <ons-list>
            <ons-list-item modifier="chevron" onclick="menu.setMainPage('landing.html', {closeMenu: true})">
                Landing Page
            </ons-list-item>
            <ons-list-item modifier="chevron" onclick="menu.setMainPage('doctor.html', {closeMenu: true})">
                Doctor Portal
            </ons-list-item>
            <ons-list-item modifier="chevron" onclick="menu.setMainPage('patient.html', {closeMenu: true})">
                Patient Portal
            </ons-list-item>
        </ons-list>
    </ons-template>
</body>
</html>
